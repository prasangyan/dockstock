<head>
  <meta charset="utf-8">

  <!-- Always force latest IE rendering engine (even in intranet) & Chrome Frame
       Remove this if you use the .htaccess -->
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

  <title>Dashboard</title>
  <meta name="description" content="">
  <meta name="author" content="">

  <!--  Mobile viewport optimized: j.mp/bplateviewport -->
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <!-- Place favicon.ico & apple-touch-icon.png in the root of your domain and delete these references -->
  <link rel="shortcut icon" href="/favicon.ico">
  <link rel="apple-touch-icon" href="/apple-touch-icon.png">


  <!-- CSS : implied media="all" -->
  <%= stylesheet_link_tag "style" %>


  <!-- Uncomment if you are specifically targeting less enabled mobile browsers
  <link rel="stylesheet" media="handheld" href="css/handheld.css?v=2">  -->

  <!-- All JavaScript at the bottom, except for Modernizr which enables HTML5 elements & feature detects -->
  <%= javascript_include_tag "libs/modernizr-1.6.min" %>

</head>

<body>
	<div class="container">

		<div class="header-container">
			<div class="header">
                <%= image_tag "logo.png" %>
				<fieldset id="search">
					<input type="text" class="" value="" id="txtsearchcriteria">
					<span class="menu-button"><a href="#" class="small blue gradient-button">Search</a></span>
				</fieldset>
			</div>
		</div>

		<div class="nav">
			<ul>
				<!-- <li><a href="#">Client List</a></li> -->
				<li><%= link_to "File List", {:action => "index"}, :class=> "selected" %></li>
			</ul>
		</div>

		<div class="content-container">
            <% @buckets.each do |bucket|  %>
			<div class="content">
				<h3><%= bucket.name %></h3>
				<table>
                    <% if bucket.objects.count() > 0 %>
                        <% bucket.objects.each do |object| %>
                        <tr class="linkrow">
						    <td><%= image_tag "fileicons/" + File.extname(object.key).to_s[1..4] + ".png" %></td>
						    <td class="file-name"><a href='<%= AWS::S3::S3Object.url_for(object.key,bucket.name,:authenticated => false) %> '><%= object.key %></a></td>
						    <td><span class="File-Status-Info">Last modified:</span><%= object.last_modified.strftime("%d-%m-%Y") %></td>
					    </tr>
                        <% end %>
                    <% else %>
                        <tr id="emptyRow">
                            <td colspan="3">There is no files available to download.</td>
                        </tr>
                    <% end %>
                        <tr id="noresultsrow">
                            <td colspan="3">There is no file-link found for your search criteria.</td>
                        </tr>
			    </table>
    			<div class="right-options">
	    			<span class="menu-button"><%= link_to  "Upload documents", {:action => "upload"}, :class => "small blue gradient-button" %></span>
		    	</div>
			    <div class="clearfix"></div>
			    </div>
		    </div>
            <% end %>
	</div>


	<!--Body !-->
   <!--! end of #container -->



  <!-- Javascript at the bottom for fast page loading -->

  <!-- Grab Google CDN's jQuery. fall back to local if necessary -->
  <script src="//ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.js"></script>
  <script>!window.jQuery && document.write(unescape('%3Cscript src="js/libs/jquery-1.4.2.js"%3E%3C/script%3E'))</script>


  <!-- scripts concatenated and minified via ant build script-->
  <%= javascript_include_tag "plugins" %>
  <%= javascript_include_tag "script" %>
  <!-- end concatenated and minified scripts-->


  <!--[if lt IE 7 ]>
    <%= javascript_include_tag "libs/dd_belatedpng" %>

    <script> DD_belatedPNG.fix('img, .png_bg'); //fix any <img> or .png_bg background-images </script>
  <![endif]-->

  <!-- yui profiler and profileviewer - remove for production -->
  <%= javascript_include_tag "profiling/yahoo-profiling.min" %>
  <%= javascript_include_tag "profiling/config" %>
  <!-- end profiling code -->


  <!-- asynchronous google analytics: mathiasbynens.be/notes/async-analytics-snippet
       change the UA-XXXXX-X to be your site's ID -->
  <script>
   var _gaq = [['_setAccount', 'UA-XXXXX-X'], ['_trackPageview']];
   (function(d, t) {
    var g = d.createElement(t),
        s = d.getElementsByTagName(t)[0];
    g.async = true;
    g.src = ('https:' == location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
    s.parentNode.insertBefore(g, s);
   })(document, 'script');
  </script>

  <%= javascript_include_tag "jquery-1.4.4.min" %>
  <%= javascript_include_tag "jquery.quicksearch" %>
  <%= javascript_include_tag "jquery.highlight-3" %>
  <%= javascript_include_tag "UserInteractions" %>

</body>
</html>








AWS::S3::Bucket.create("#{@project.name}")

        # granting the permission to upload or download the files from the bucket.
        @bucket =  AWS::S3::Bucket.find(@project.name)
        @policy = @bucket.acl()

        group = "AllUsers"

        grant = AWS::S3::ACL::Grant.new
        grant.permission= 'FULL_CONTROL'

        grantee = AWS::S3::ACL::Grantee.new
        grantee.group = group
        grant.grantee = grantee

        @policy.grants << grant

        grant = AWS::S3::ACL::Grant.new
        grant.permission= 'READ'

        grantee = AWS::S3::ACL::Grantee.new
        grantee.group = group
        grant.grantee = grantee

        @policy.grants << grant


        grant = AWS::S3::ACL::Grant.new
        grant.permission= 'WRITE'

        grantee = AWS::S3::ACL::Grantee.new
        grantee.group = group
        grant.grantee = grantee

        @policy.grants << grant


        grant = AWS::S3::ACL::Grant.new
        grant.permission= 'READ_ACP'

        grantee = AWS::S3::ACL::Grantee.new
        grantee.group = group
        grant.grantee = grantee

        @policy.grants << grant


        grant = AWS::S3::ACL::Grant.new
        grant.permission= 'WRITE_ACP'

        grantee = AWS::S3::ACL::Grantee.new
        grantee.group = group
        grant.grantee = grantee

        @policy.grants << grant

        @bucket.acl(@policy)



<ul class="fileList">
                    <% @sobjects.each do |sobject| %>
                        <li>
                            <%= image_tag "#{GetImage(sobject.name)}" %>
                            <!-- <span class="docMenu"><a href="#"><img src="img/download.png">Previous Versions</a></span>	-->
                            <!-- Todo: Figure out why when the margin-left is applied to the a element it moves only the first line	. Once I figure out that then I can remove the div tag-->
                            <div>
                                <a href="<%= sobject.url %>" class="docName"><%= sobject.name %></a>
                            </div>
                            <% if sobject.child != nil %>
                                <ul class="documentList">
                                    <li>
                                        <%= image_tag "#{GetImage(sobject.child)}" %>
                                        <div>
                                            <a href="#" class="docName"><%= sobject.child %></a>
                                        </div>
                                    </li>
                                </ul>
                            <% end %>
					    </li>

                    <% end %>
				</ul>


				<ul>
                        <% @sobjects.each do |sobject| %>
                            <li>
                                <%= image_tag "#{GetImage_Large(sobject.name)}" , :class => "#{GetClass(sobject.name)}" %>
                                <% if sobject.content_length == "0" %>
                                    <a href="/dashboard/<%= sobject.name %>"><%= sobject.name %></a>
                                    <p class="documentSummary"><span>Files:</span> <%= sobject.size %></p>
                                <% else %>
                                    <a href="<%= sobject.url %>"><%= sobject.name %></a>
                                    <p class="documentSummary"><span>File size: </span> <%= sprintf("%.2f",(sobject.content_length.to_d / 1048576)) %> MB | <span>Version: </span><a href="#">1.0</a> | <span>Last modified:</span> <%= distance_of_time_in_hours_and_minutes(Date.today,sobject.last_modified)  %> ago <span>by</span> <a href="#"> Prashant Angyan</a></p>
                                <% end %>
                            </li>
                            <% end %>
                    </ul>