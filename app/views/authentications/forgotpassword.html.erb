<div class="loginBox">
    <h1>Did you forget your password?</h1>
    <div class="errorContainer">
        <% unless @error.nil? %>
            <%= @error %>
        <% end %>
    </div>
    <form id="loginForm" action="/forgotpassword" accept-charset="UTF-8" method="post" >
        <input type="hidden" value="<%= form_authenticity_token %>" name="authenticity_token">
        <label>Email</label>
        <input tabindex="1" type="text" name="username" placeholder="Enter the email id you signed up with" id="emailid" class="required email" />
    </form>
   <br/>
    <a href="#" id="BtnResetPassword" class="large button blue">Email password reset instructions</a>
</div>
<%= javascript_include_tag "JQValidation" %>
<%= javascript_include_tag "forgotpassword" %>
