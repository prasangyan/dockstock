<div class="loginBox">
    <h1>Login</h1>
    <div class="errorContainer">
        <% unless @error.nil? %>
            <%= @error %>
        <% end %>
    </div>
    <form id="loginForm" action="/authentications" accept-charset="UTF-8" method="post" >
        <input type="hidden" value="<%= form_authenticity_token %>" name="authenticity_token">
        <label>Email</label>
        <input tabindex="1" type="text" name="username" placeholder="Enter the email id you signed up with" id="emailid" class="required email" value="<%= @authentication.username %>" />
	    <label>Password</label>
        <input tabindex="2" type="password" name="password" placeholder="Enter your password you signed up with" id="password" class="required lastbox" />
    </form>
    <%= link_to "Forget your password?", "/forgotpassword" %> | <%=link_to "Sign up", register_url %><br/>
    <a href="#" id="BtnLogIn" class="large button blue">Login</a>
</div>
<% if @resetpassword == true %>
    <%= stylesheet_link_tag "jquery.fancybox-1.3.4" %>
    <%= javascript_include_tag "jquery.mousewheel-3.0.4.pack" %>
    <%= javascript_include_tag "jquery.fancybox-1.3.4.pack" %>
    <!-- Popup when the user logged in the dashboard first time -->
    <div class="modalWindow" id="Resetpasswordbox">
        <h2>You are all set, <label id="lbl_name"></label>. Thanks!</h2>
        <p>Instructions to reset your password has been sent to your email address. Follow the instructions in the mail and we will reset your password.</p>
        <a href="#" id="closebox">Close this box</a>
    </div>
    <%= javascript_include_tag "Viewpopup" %>
<% end %>
<%= javascript_include_tag "JQValidation" %>
<%= javascript_include_tag "authentication" %>
